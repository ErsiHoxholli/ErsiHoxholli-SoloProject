<a href="/logout" class="b btn btn-danger">Logout</a>

<table class="b table table-striped">
            <thead>
                <tr>
                <th>Name of Product</th>
                <th>Description</th>
                <th>Participate</th>               

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ProductsList)
                {
                    <tr>
                        <td>
                          <a asp-action="ShowProduct" asp-controller="Home" asp-route-id="@item.ProductId">  @item.NameOfProduct </a>  
                        </td>
                        <td>
                           @item.Description
                        </td>
                        <td>
                        <a asp-action="Participate" asp-controller="Home" asp-route-id="@item.ProductId"> Participate</a>  

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    <div class="b text-center border-bottom">
        <h5 class="display-4">My participate Bag</h5>
    </div>
    <div class="text-center">
        @foreach (var item in ViewBag.MyProductsParticipate)
                    {
                        <div class="text-center">
                            <h6 class="display-6">  @item.MyProduct.NameOfProduct</h6>
                            <h6 class="border-bottom">@item.MyProduct.Description</h6>
                        </div>
                    }   
    </div>
          